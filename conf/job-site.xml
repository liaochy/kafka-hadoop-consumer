<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	<property>
		<name>fs.default.name</name>
		<value>hdfs://goldmine.namenode65:9000</value>
	</property>

	<property>
		<name>io.file.buffer.size</name>
		<value>131072</value>
		<description></description>
	</property>
	<property>
		<name>fs.inmemory.size.mb</name>
		<value>200</value>
		<description></description>
	</property>

	<property>
		<name>dfs.block.size</name>
		<value>134217728</value>
		<description>The default block size for new files.</description>
	</property>

	<property>
		<name>io.compression.codecs</name>
		<value>org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.GzipCodec,com.hadoop.compression.lzo.LzoCodec
		</value>
	</property>

	<property>
		<name>hdfs.output.compress</name>
		<value>true</value>
	</property>

	<property>
		<name>hdfs.output.compression.codec</name>
		<!-- <value>org.apache.hadoop.io.compress.GzipCodec</value> -->
		<value>com.hadoop.compression.lzo.LzoCodec</value>
	</property>

</configuration>